<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'meta.tmpl' %}
</head>
<body>
    {% include 'header.tmpl' %}

    <main>
        {% for post in posts %}
        <article class="post">
            <div class="post-meta">{{ post.date }}</div>
            <h2 class="post-title">
                {% if post.type in ['long', 'short'] %}
                <a href="{{ post.url }}">{{ post.title }}</a>
                {% else %}
                {{ post.title }}
                {% endif %}
            </h2>
            {% if post.type == 'short' %}
            <div class="post-content">
                {{ post.content | safe }}
            </div>
            {% endif %}
        </article>
        {% endfor %}
    </main>

    {% include 'footer.tmpl' %}
</body>
</html>
